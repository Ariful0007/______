<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TableLayout
                android:id="@+id/table"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/login_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                >
                <TableRow
                    android:visibility="gone"
                    android:background="@color/com6">

                    <TextView
                        android:layout_centerVertical="true"

                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Main Wallet Transcation"
                        android:textColor="@android:color/white"
                        android:padding="10sp"
                        android:textAllCaps="false"

                        android:textAlignment="center"
                        android:textSize="@dimen/space_15dp"
                        android:layout_weight="10"
                        android:gravity="center_horizontal"
                        />
                </TableRow>
                <TableRow
                    android:visibility="gone">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:background="@drawable/border"
                        android:gravity="center_horizontal"
                        android:padding="10sp"
                        android:text="Fund Receive"
                        android:textColor="@color/black"
                        android:textSize="12sp" />



                    <TextView
                        android:background="@drawable/border"
                        android:text="@string/work"
                        android:id="@+id/fundRecevice"

                        android:layout_width="0dp"
                        android:layout_height="50dp"

                        android:padding="10sp"
                        android:textSize="12dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        />

                </TableRow>
                <TableRow
                    android:visibility="gone">


                    <TextView
                        android:background="@drawable/border"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:text="Fund Transfer "
                        android:padding="10sp"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        />



                    <TextView
                        android:background="@drawable/border"
                        android:text="@string/work"
                        android:id="@+id/mainbalancetransfer"
                        android:layout_width="0dp"
                        android:layout_height="50dp"

                        android:padding="10sp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textSize="12dp"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        android:layout_weight="4"
                        android:gravity="center_horizontal"
                        />

                </TableRow>





            </TableLayout>



        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>