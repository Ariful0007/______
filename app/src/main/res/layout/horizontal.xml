<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalScrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/wor1111k"


                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"

                        app:cardBackgroundColor="@color/com6"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="10dp"

                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/dddd"
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_alignParentRight="false"
                                android:layout_centerHorizontal="true"
                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerInParent="false"
                                android:background="@drawable/console" />



                            <TextView
                                android:layout_below="@id/dddd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="12dp"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="Video game"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/work33"
                        android:layout_width="150dp"

                        android:layout_height="130dp"
                        android:layout_weight="1"

                        app:cardBackgroundColor="@color/com6"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="10dp"

                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="50dp"
                                android:id="@+id/ddd"
                                android:layout_height="@dimen/space_50dp"
                                android:layout_alignParentRight="false"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/radio"
                                android:foregroundTint="@color/white" />


                            <TextView
                                android:layout_centerVertical="true"

                                android:layout_below="@+id/ddd"
                                android:id="@+id/date"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerInParent="true"
                                android:layout_marginLeft="0dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:gravity="center_horizontal"
                                android:padding="8dp"
                                android:text="Live Streaming"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:textSize="12dp" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/wor1111k11"
                        android:visibility="gone"

                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"

                        app:cardBackgroundColor="@color/com6"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="10dp"

                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="10dp"
                                android:id="@+id/bb"

                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerInParent="false"
                                android:background="@drawable/powerbank" />



                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_below="@+id/bb"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="false"
                                android:layout_centerInParent="true"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="12dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_sans_bold"
                                android:text=" Recharge"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/wor1111k1133"

                        android:layout_width="150dp"
                        android:layout_height="130dp"
                        android:layout_weight="1"

                        app:cardBackgroundColor="@color/com6"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="10dp"

                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:foregroundTint="@color/white"
                                android:layout_width="50dp"
                                android:layout_marginTop="10dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="10dp"
                                android:id="@+id/bb1"

                                android:layout_height="@dimen/space_50dp"
                                android:layout_centerInParent="false"
                                android:background="@drawable/shoppingbag" />



                            <TextView
                                android:layout_centerVertical="true"
                                android:layout_below="@+id/bb1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="false"
                                android:layout_centerInParent="true"
                                android:padding="8dp"
                                android:layout_marginLeft="0dp"
                                android:textSize="12dp"
                                android:textAlignment="center"
                                android:textColor="@color/white"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="E-Commarce"
                                android:gravity="center_horizontal" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>





                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
            </LinearLayout>
</LinearLayout>