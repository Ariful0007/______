<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".FULL_REFFER">


<RelativeLayout
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/borderfile"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:src="@drawable/reindeer" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/referCodeTv"
        android:layout_centerInParent="true"
        android:layout_margin="12dp"
        android:gravity="center_horizontal"
        android:minWidth="160dp"
        android:padding="12dp"
        android:text="Your Refer Code"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/referCodeTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/refer_bg"
        android:gravity="center_horizontal"
        android:minWidth="160dp"
        android:padding="12dp"
        android:text="Refer Code"
        android:textSize="22sp" />

    <Button
        android:id="@+id/redeemBtn"
        android:onClick="ddd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/shareBtn"
        android:background="@drawable/main_bg"
        android:backgroundTint="@color/white"
        android:minWidth="180dp"
        android:text="Redeem Code" />

    <Button
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="26dp"
        android:background="@drawable/main_bg"
        android:backgroundTint="@color/white"
        android:minWidth="180dp"
        android:text="Share Your Code" />
</RelativeLayout>


</RelativeLayout>