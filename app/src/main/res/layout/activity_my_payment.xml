<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MyPayment">
    <RelativeLayout

        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/gradient_background"
                />

        </com.google.android.material.appbar.AppBarLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/borderfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Amount"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/white"


                ></TextView>

            <EditText
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="@dimen/space_20dp"
                android:background="@drawable/border"
                android:hint="      Enter amount"
                android:inputType="numberDecimal"
                android:maxLength="11"
                android:textColor="@color/black"
                android:textSize="15dp"></EditText>
            <TextView
                android:visibility="gone"
                android:id="@+id/textammount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Amount"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/newColor"


                ></TextView>
            //
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Payment Method"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/white"


                ></TextView>
            <Spinner
                android:id="@+id/spinnerTextSize"
                android:maxLength="11"
                android:hint="     Gateways"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_marginRight="@dimen/space_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50dp"
                ></Spinner>
            //
            <TextView
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Gateway"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/white"


                ></TextView>
            <Spinner
                android:visibility="gone"
                android:id="@+id/agents"
                android:maxLength="11"
                android:hint="     Agents"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="text"
                android:layout_marginRight="@dimen/space_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50dp"
                ></Spinner>
            //number
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Enter Payment Number"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/white"


                ></TextView>
            <EditText
                android:id="@+id/number"


                android:hint="      Enter payment number"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="phone"
                android:layout_marginRight="@dimen/space_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50dp"
                ></EditText>
            //
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Enter Password"
                android:textStyle="normal"
                android:textAlignment="viewStart"
                android:textColor="@color/white"


                ></TextView>
            <EditText
                android:id="@+id/transcationpin"


                android:hint="      Enter your account password"
                android:background="@drawable/border"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:inputType="numberDecimal"
                android:layout_marginRight="@dimen/space_20dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_50dp"
                ></EditText>
            <Button
                android:id="@+id/cirLoginButton"
                style="@style/loginButton"
                android:text="Send "
                android:textAllCaps="true"

                android:layout_gravity="center"
                android:layout_marginTop="@dimen/loginViewsMargin"/>
            <TextView
android:id="@+id/showing"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_10dp"
                android:layout_marginRight="@dimen/space_10dp"
                android:gravity="center_vertical"
                android:text="Income Balance : 102tk"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"


                ></TextView>
        </LinearLayout>

    </ScrollView>
</LinearLayout>